%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", :"http-equiv" => "X-UA-Compatible"}
    %title
      = current_article ? current_article.title : (current_page.data.title || "The Omega Project Blog")
    = feed_tag :rss, "#{blog.options.prefix.to_s}/feed.xml", :title => "RSS Feed"

    = stylesheet_link_tag "normalize", "all"
    = stylesheet_link_tag "normalize", "omega"
    = yield_content :stylesheets

    = javascript_include_tag  "all"
    = yield_content :javascripts
  
  = link_to image_tag("https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png",
                      :style => "position: absolute; top: 0; left: 0; border: 0;",
                      :alt   => "Fork me on GitHub"),
            "http://github.com/movitto/omega-blog"

  = link_to image_tag("feed.png",
                      :style => "position: absolute; top: 0; right: 0; border: 0;"),
            "#{blog.options.prefix.to_s}/feed.xml"

  = image_tag("omega-large-logo.png")
  %div{:style => "clear: both"}

  #nav
    .nav_link
      = link_to "the omegaverse",  "http://omegaverse.info"
    .nav_link
      = link_to "omega",  "http://github.com/movitto/omega"
    .nav_link
      = link_to "forum/mailing list", "https://groups.google.com/forum/#!forum/omegaverse"
    %div{:style => "clear: both"}
  %div{:style => "clear: both"}
  <br/>

  %body{:class => page_classes}
    = yield
