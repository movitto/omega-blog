%html
  %head{:profile => "http://www.w3.org/2005/10/profile"}
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", :"http-equiv" => "X-UA-Compatible"}
    %title
      = current_article ? current_article.title : (current_page.data.title || "The Omega Project Blog")
    = feed_tag :rss, "#{blog.options.prefix.to_s}/feed.xml", :title => "RSS Feed"
    %link{:rel => :icon, :type => "image/x-icon",
          :href => "http://blog.omegaverse.info/images/favicon.ico"}

    = stylesheet_link_tag "normalize", "all", "omega"
    = yield_content :stylesheets

    = javascript_include_tag  "all"
    = yield_content :javascripts
  
  = link_to image_tag("https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png",
                      :style => "position: fixed; top: 0; left: 0; border: 0; z-index: 1",
                      :alt   => "Fork me on GitHub"),
            "http://github.com/movitto/omega-blog"

  = link_to image_tag("support.png",
                      :style => "position: fixed; bottom: 10px; right: 10px; border: 0; z-index: 1"),
            "http://webchat.freenode.net/?channels=omegaverse"

  = link_to image_tag("feed.png",
                      :style => "position: fixed; top: 0; right: 0; border: 0; z-index: 1"),
            "#{blog.options.prefix.to_s}/feed.xml"

  = link_to "Find Out More!", "http://about.omegaverse.info",
            :style => "display: block; position: fixed; top: 13px; right: 50px; padding: 2px; color: blue; font-weight: bold; text-decoration: none; z-index: 1;"

  = link_to image_tag("omega-large-logo.png"), "/"

  #node_status_widget
    Omegaverse Node Status:
    #node_statuses

  %div{:style => "clear: both"}

  #nav
    .nav_link
      = link_to "the omegaverse",  "http://omegaverse.info"
    .nav_link
      = link_to "omega",  "http://github.com/movitto/omega"
    .nav_link
      = link_to "forum/mailing list", "https://groups.google.com/forum/#!forum/omegaverse"
    %div{:style => "clear: both"}
  %div{:style => "clear: both"}
  <br/>

  %body{:class => page_classes}
    = yield
